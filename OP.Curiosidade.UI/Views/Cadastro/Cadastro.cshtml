<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <script defer src="~/Scripts/scriptDashboard.js"></script>
    <script defer src="~/Scripts/scriptCadastro.js"></script>
    <title>OP Curiosidade | Dashboard</title>
</head>
<body>

    <!-- conte�do principal da dashboard -->

    <main>
        <div class="topbar">
            <div class="toggle">
                <ion-icon name="menu-outline"></ion-icon>
            </div>

            <!-- Barra de pesquisa -->

            <div class="pesquisa">
                <label>
                    <input type="text" placeholder="Pesquise...">
                    <ion-icon name="search-outline"></ion-icon>
                </label>
            </div>

            <!-- Imagem do Usu�rio -->

            <div class="user">
                
            </div>
        </div>

        <!-- Cadastro -->

        <form method="post">
            <article>
                <header>
                    @if (Model.Id_Usuario != 0)
                    {
                    <h3>Editar Cadastro</h3>
                    }
                    else
                    {
                    <h3>Novo Cadastro</h3>
                    }
                </header>
                <section class="paginaCadastro">
                    <div class="fatos">
                        <h4>Fatos e Dados</h4>
                        <div class="linhaVerde"></div>

                        <input type="hidden" value="@Model.Id_Usuario" name="Id_Usuario"/>

                        <label>Nome</label>
                        <input type="text" id="Nome" name="Nome" value="@Model.Nome">

                        <div class="mesmaLinha">
                            <div class="cadastroEmail">
                                <label>E-mail</label>
                                <input type="email" id="email" name="Email" value="@Model.Email">
                            </div>

                            <div class="cadastroIdade">
                                <label>Idade</label>
                                <input type="date" id="idade">
                            </div>
                        </div>

                        <label>Senha</label>
                        <input type="password" name="Senha" id="senha" value="@Model.Senha">

                        <label>Outras Informações</label>
                        <textarea id="outrasInformacoes"></textarea>
                    </div>

                    <div class="interesses">
                        <h4>Interesses</h4>
                        <div class="linhaVerde"></div>
                        <textarea id="interesses"></textarea>
                    </div>

                    <div class="sentimentos">
                        <h4>Sentimentos</h4>
                        <div class="linhaVerde"></div>
                        <textarea id="sentimentos"></textarea>
                    </div>

                    <div class="valores">
                        <h4>Valores</h4>
                        <div class="linhaVerde"></div>
                        <textarea id="valores"></textarea>
                    </div>

                    <div class="ativacao">
                        <div class="checkboxCadastro">
                            <input type="checkbox" name="Ativo" id="status">
                            <p>Cadastro Ativo</p>
                        </div>
                        <div id="alertaCadastro"></div>
                        <div class="btnCadastro">
                            <button type="submit" class="botaoCadastro" onclick="cadastro()">
                                Gravar
                            </button>
                        </div>
                    </div>
                </section>
            </article>
        </form>
    </main>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>