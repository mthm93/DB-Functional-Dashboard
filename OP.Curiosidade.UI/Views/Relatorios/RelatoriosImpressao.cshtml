<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/style.css" rel="stylesheet" />
    <script defer src="~/Scripts/scriptDashboard.js"></script>
    <script defer src="~/Scripts/scriptRelatorios.js"></script>
    <title>OP Curiosidade | Relatórios</title>
</head>
<body>

    <!-- conte�do principal da dashboard -->

    <main>
        <div class="topbar">
            <div class="toggle">
                <ion-icon name="menu-outline"></ion-icon>
            </div>

            <!-- Barra de pesquisa -->

            <div class="pesquisa">
                <label for="">
                    <input type="text" placeholder="Pesquise...">
                    <ion-icon name="search-outline"></ion-icon>
                </label>
            </div>

            <!-- Imagem do Usu�rio -->

            <div class="user">
                
            </div>
        </div>

        <!-- Relat�rios -->

        <article class="articleImpressao">
            <header class="tituloRelatorio">
                <h3>Relatorios</h3>
            </header>
            <section class="paginaRelatorios">
                <div class="fatos">
                    <div class="impressaoRelatorio">
                        <h4>Relatorio de Cadastro</h4>
                        <div class="btnCadastro">
                            <button class="botaoCadastro" onclick="imprimir()">Imprimir</button>
                        </div>
                    </div>
                    <div class="linhaVerde"></div>
                    <div id="relatorioCadastro" class="relatorioCadastro">
                        <table>
                            <thead>
                                <tr>
                                    <td>Nome</td>
                                    <td>E-mail</td>
                                    <td>Data de Entrada</td>
                                    <td>Ação</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr>
                                        <td>@usuario.Nome</td>
                                        <td>@usuario.Email</td>
                                        <td>@usuario.Data_Inicio</td>
                                        <td><span class="statusAtivo">Ativo</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </article>
    </main>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>